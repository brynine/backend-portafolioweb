<?xml version="1.0" encoding="UTF-8"?>
<persistence version="3.0"
    xmlns="https://jakarta.ee/xml/ns/persistence"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="
        https://jakarta.ee/xml/ns/persistence
        https://jakarta.ee/xml/ns/persistence/persistence_3_0.xsd">

    <persistence-unit name="gproyectoPersistenceUnit" transaction-type="JTA">

        <!-- DataSource configurado en WildFly -->
        <jta-data-source>java:jboss/datasources/PostgresDS</jta-data-source>


        <properties>

            <!-- Manejo del esquema (NO borra datos en cada deploy) -->
            <property name="jakarta.persistence.schema-generation.database.action"
                      value="update"/>
            <property name="jakarta.persistence.schema-generation.create-source"
                      value="metadata"/>

            <!-- Hibernate -->
            <property name="hibernate.dialect"
                      value="org.hibernate.dialect.PostgreSQLDialect"/>
            <property name="hibernate.show_sql" value="true"/>
            <property name="hibernate.format_sql" value="true"/>

        </properties>

    </persistence-unit>
</persistence>
